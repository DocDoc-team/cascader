{
    "name": "nikolaposa/cascader",
    "description": "Utility for cascade creation of PHP objects from their array definitions.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "instantiate",
        "object",
        "array",
        "cascade"
    ],
    "authors": [
        {
            "name": "Nikola Posa",
            "email": "posa.nikola@gmail.com",
            "homepage": "http://www.nikolaposa.in.rs/"
        }
    ],
    "require": {
        "php": "^7.0",
        "roave/better-reflection": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Cascader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cascader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
